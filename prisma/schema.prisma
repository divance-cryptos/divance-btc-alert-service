datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Alert {
  id Int @default(autoincrement()) @id
  name String
  description String?
  time_scheduled  DateTime
  active Boolean @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Btc {
  price_date DateTime
  symbol String @id
  open Float
  high Float
  low Float
  close Float
  @@unique([price_date, symbol], name: "pairIdentifier")
}

model btc_ath {
  price_date DateTime
  symbol String @id
  high Float
  @@unique([price_date, symbol], name: "pairAthIdentifier")
}

model btc_ath_aux {
  symbol String @unique // @id btc_ath @relation(fields: [symbol], references: [symbol])
  logo_url String
  networks String
  totalSupply Float
  fixedSupply Boolean
}

model Token_ath {
  id Int @id @default(autoincrement())
  price_date DateTime
  symbol String
  high Float
  symbol_info Token_info @relation(fields: [symbolId], references: [id]) // references `id` of `Profile`
  symbolId Int
}

model Token_info {
  id Int @id @default(autoincrement())
  symbol String
  logo_url String
  pair String
  networks String
  totalSupply Float
  fixedSupply Boolean
  token_ath Token_ath?
}
